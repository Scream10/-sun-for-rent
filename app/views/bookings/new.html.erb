<div class="mb-5 img-background-new-booking" style="background-image: url('<%= cl_image_path @terrace.photo.key %>')">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <div class="card card-booking">
        <div class= "d-flex justify-content-center">
          <h2> Booking the terrace : <%= @terrace.name %></h2>
        </div>
        <div class= "d-flex justify-content-center mt-3">
          <h5>Price per day: <%= @terrace.price_per_night %>â‚¬<h4>
        </div>

        <div class= "d-flex justify-content-center">
          <%= simple_form_for([@terrace, @booking]) do |f| %>
            <%= f.input :start_date, as: :string, label: "From", placeholder: "20-04-2020", wrapper_html: { class: "inline_field_wrapper mt-4" } %>
            <%= f.input :end_date, as: :string, label: "To", placeholder: "23-04-2020", wrapper_html: { class: "inline_field_wrapper mt-4" } %>
        </div>
            <div class= "d-flex justify-content-center mt-4">
              <%= f.submit "Book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>



