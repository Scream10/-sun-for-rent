<div class="navbar navbar-home navbar-expand-sm navbar-light fixed-top">
  <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Book a terrace", root_path, class: "nav-sec-link" %>
      </li>
      <% if !user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", user_session_path, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class= "background-form">
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <div class="card new my-5">
        <div class= "d-flex justify-content-center">
          <h2>New terrace</h2>
        </div>
          <%= simple_form_for [ @user, @terrace ] do |f| %>
            <%= f.input :name, placeholder: "Terrace's name" %>
            <%= f.input :description, placeholder: "Beautiful terrace with flowers ..."%>
            <%= f.input :photo, as: :file %>
            <%= f.input :address, placeholder: "1 rue des fleurs, 33000 Bordeaux" %>
            <%= f.input :price_per_night, placeholder: "15â‚¬" %>
          <div class =" mt-5 mb-5 d-flex justify-content-center">
            <%= f.submit "Create", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
