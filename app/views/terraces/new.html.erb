<div class= "banner">
  <div class="navbar navbar-home navbar-expand-sm navbar-light fixed-top">
    <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Book a terrace", root_path, class: "nav-link" %>
          </li>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <img src="<%= (url_for(current_user.avatar)) %>" class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup=true aria-expanded=false >
            <% else %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My dashboard", bookings_path, class: "dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
      </ul>
    </div>
  </div>

<div class= "background-form">
</div>

<div class="container">
  <div class="row">
    <div class="create-terraces col-sm-12 offset-sm-4 d-flex justify-content-center mt-3">
      <div class="card create-terrace mt-5">
        <div class= "d-flex justify-content-center">
          <h2>New terrace</h2>
        </div>
          <%= simple_form_for [ @user, @terrace ] do |f| %>
            <%= f.input :name, placeholder: "Terrace's name" %>
            <%= f.input :description, placeholder: "Beautiful terrace with flowers ..."%>
            <%= f.input :photo, as: :file %>
            <%= f.input :address, placeholder: "1 rue des fleurs, 33000 Bordeaux" %>
            <%= f.input :price_per_night, as: :string, placeholder: "15â‚¬" %>
          <div class =" mt-2 mb-2 d-flex justify-content-center">
            <%= f.submit "Create", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
