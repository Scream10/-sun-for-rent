<div class= "banner">
  <div class="navbar navbar-home navbar-expand-sm navbar-light fixed-top">
    <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Host a terrace", user_session_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Host a terrace", new_terrace_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log in", user_session_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <img src="<%= (url_for(current_user.avatar)) %>" class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup=true aria-expanded=false >
            <% else %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My dashboard", bookings_path, class: "dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= image_tag "Background.jpg", class: "img-background" %>

  <div class="container-sm d-flex justify-content-center">
    <div class="row">
      <div class="search-form col-sm-12 offset-sm-4">
        <div class="card search">
          <div class= "d-flex justify-content-center">
            <h2>Book unique terraces to enjoy</h2>
          </div>
            <%= simple_form_for :terrace, url: terraces_path, method: :get do |f| %>
              <%= f.input :address, name: "search[query]" %>
              <div class= "d-flex justify-content-center">
              <%= f.submit 'search', class: 'btn btn-primary' %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-sm container-carousel">
  <div class="d-flex justify-content-center">
    <h2 class="mt-3 carousel-title">Best terraces of the world</h2>
  </div>

  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="2500">
    <div class="carousel-inner">
      <div class="carousel-item active ml-2 ">
        <div class="d-flex justify-content-center">
          <div class="card mb-3 w-75">
            <div class="row no-gutters">
              <% terrace = @terraces.sample %>
              <div class="col-md-4">
                <%= cl_image_tag terrace.photo.key, class: "card-img" %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to terrace.name, terrace_path(terrace) %></h5>
                  <p class="card-text"><%= terrace.description %></p>
                <p class="card-text"><%= terrace.price_per_night %>€ per night</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="carousel-item ml-2">
